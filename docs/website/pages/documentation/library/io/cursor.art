name: "cursor"
type: :function
module: "Io"
description: "turn cursor visibility on/off"
returns: [
        :nothing
    ]
examples: [
        {
            cursor false    ; (hides the cursor)
            cursor true     ; (shows the cursor)
        }
    ]
