{
	"name": "arturo",
	"description": "Simple, modern and powerful interpreted programming language for super-fast scripting",
	"homepage" : "http://arturo-lang.io",
	"authors": [
		"drkameleon"
	],
	"copyright": "Copyright © 2019, Yanis Zafirópulos (aka Dr.Kameleon)",
	"license": "MIT",
	"configurations": [
		{
            "name": "application",
            "targetType": "executable"
        },
        {
            "name": "library",
            "targetType": "staticLibrary",
        }
    ],
	"dependencies": {
		"dmarkdown": "~>0.3.0",
		"dyaml": "~>0.8.0"
	},
	"dflags-dmd": [
		"-J source/resources",
		"-noboundscheck"
	],
	"dflags-ldc": [
		"-J=source/resources",
		"-flto=full",
		"-O3",
		"-Os"
	],
	"sourceFiles": [
		"obj/lexer.o",
		"obj/parser.o"
	],
	"lflags-dmd": [
		"-lcurl"
	],
	"lflags-ldc": [
		"-lcurl"
	],
	"preBuildCommands": [
		"scripts/make_parser.sh",
		"scripts/update_build.sh"
	],
	"postBuildCommands": [
		"strip arturo"
	]
}