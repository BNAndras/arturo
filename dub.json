{
	"name": "arturo",
	"description": "Simple, modern and powerful interpreted programming language for super-fast scripting",
	"authors": [ "drkameleon" ],
	"copyright": "Copyright © 2019, Yanis Zafirópulos (aka Dr.Kameleon)",
	"license": "MIT",
	"homepage": "http://arturo-lang.io",

	"dependencies": {
		"dmarkdown": "~>0.3.0",
		"dxml": "~>0.4.1",
		"dyaml": "~>0.8.0",
		"gtk-d": "~>3.9.0",
		"urld": "~>2.1.1",
		"vibe-d:inet": "~>0.8.6"
	},
	"configurations": [
		{
			"name": "application",
			"targetType": "executable"
		},
		{
			"name": "library",
			"targetType": "staticLibrary"
		}
	],
	"buildTypes": {
		"release": {
			"buildOptions": ["releaseMode", "optimize", "inline"],
			"dflags-dmd": [
				"-J source/resources",
				"-boundscheck=off"
			],
			"lflags-dmd": [
				"-lcurl",
				"-lsqlite3"
			],
			"dflags-ldc": [
				"-J=source/resources",
				"-boundscheck=off",
				"-flto=full",
				"-O5",
				"-Os",
				"-Oz"
			],
			"lflags-ldc": [
				"-lcurl",
				"-lsqlite3"
			]
		},
		"profile": {
			"buildOptions": ["profile", "optimize", "inline", "debugInfo"],
			"dflags-dmd": [
				"-J source/resources",
				"-boundscheck=off",
				"-wi"
			],
			"lflags-dmd": [
				"-lcurl",
				"-lsqlite3"
			],
			"dflags-ldc": [
				"-J=source/resources",
				"-boundscheck=off",
				"-flto=full",
				"-O5",
				"-Os",
				"-Oz",
				"-fprofile-instr-generate",
				"-fdmd-trace-functions"
			],
			"lflags-ldc": [
				"-lcurl",
				"-lsqlite3"
			]
		}
	},
	
	"preBuildCommands": [
		"scripts/make_parser.sh",
		"scripts/update_build.sh"
	],
	"sourceFiles": [
		"obj/lexer.o",
		"obj/parser.o"
	],
	"postBuildCommands": [
		"strip arturo"
	]
}