"PrimeDifference Algorithm"
"Nick version. In Art:"

is.prime $(memoize [n]{
	if n<0 { return false }
	if n<2 { return false }
	if $(and n>3 $(or n%2=0 n%3=0)) { return false }

	root 	$(to.number $(ceil $(sqrt n)))
	z 		5
	cnt 	1
	d 		1

	loop $(and z<=root d!=0) {
		d 		n%z
		z 		$(if cnt%2=0 { z+4 } { z+2 })
		cnt 	cnt+1
	}

	if d!=0 { return true } { return false }
})

maxNum $(to.number @0)

loop $(range 4 maxNum 4) [num]{
	count 0
	loop $(range 2 $(to.number $(ceil $(sqrt num)))+1 2) [a]{
		if $(and num%a=0 num/a%2=0){
			c 		(a+num/a)/2
			count 	count + $(all #($(is.prime c) $(is.prime c-a) c-a>1))
		}
	}

	if count>1 { print "For the number " + num + " there are " + count + " pairs" }
}