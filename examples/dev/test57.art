person #{
	name ""
	surname ""

	init: {
		name @0
		surname @1
	}

	sayHello: {
		print $(vars)
		print "Hello " + name
	}

	getName: {
		name
	}

	setName: [n] {
		name $(uppercase n)
	}
}

one $(new person #("john" "zafeiropoulos"))
