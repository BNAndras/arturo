main $(app "test" {

	win $(window @ #{
		:title 	"Arturo & Gtk+ GUI"
		:size 	#(500 300)
	})

	butt1 $(button "myButton1" #{ 
		:onClick { 
			print "button 1 clicked" 
			print $(syms)
		} 
	})
	butt2 $(button "myButton2" #{
		:onClick { print "button 2 clicked" } 
	})
	butt3 $(button "myButton3" #{
		:onClick { print "button 3 clicked" } 
	})

	vb $(vbox)

	!vb.add $(label "<b>Hello GUI World!</b>" #{})
	!vb.add butt1
	!vb.add butt2
	!vb.add butt3

	fld1 $(field "some input" #{})
	!vb.add fld1

	!win.add vb
	!win.show

	print $(syms)
})

!main.run