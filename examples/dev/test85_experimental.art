window #mainWindow @{
	:title	"Number Adder - in Art:"
	:size	#(500 300)

	vbox #vbox @{
	 	label "Enter <b>two</b> numbers and add them up!" #{}
		hbox #hbox {
			textfield #num1 "0" #{}))
			$(Num2 $(textfield "0" #{}))
		}

		$(Result $(textfield "" #{}))

		button "calculate" #{
			:onClick	{
				print "button clicked!"

				one $(toNumber $(!Num1.get))
				two $(toNumber $(!Num2.get))

				!Result.set $(toString one+two)
			}
		}
	}


})

mainApp $(app "TestApp" mainWindow #{})
log $(syms)
!mainApp.run
