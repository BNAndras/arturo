use ~gui

window @mainWindow #{
	:title 	"User Input / Graphical"
	:size 	#(400 300)

	vbox #{
		hbox #{
			label "string" #{}
			textfield @str "" #{}
		}
		hbox #{
			label "number" #{}
			textfield @num "" #{}
		}
		button "Enter data" #{
			:onClick { 
				print "Got: " + $(str.get) + ", " + $(num.get)
			}
		}
	}
}

app @main "UserInput.Graphical" mainWindow #{}
main.run