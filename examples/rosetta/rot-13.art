rot13: function [c][
    lc: lower c
    when [
        in? lc 'a'..'m' -> return to :char (to :integer c) + 13
        in? lc 'n'..'z' -> return to :char (to :integer c) - 13
        any             -> return c
    ]
]

loop "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz" 'ch 
    -> prints rot13 ch

