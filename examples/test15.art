//*********************
// FUNCTIONS
//*********************

""
"-ARRAY---------------------"
""

print "first: " + $(first array)
print "last: " + $(last array)
print "tail: " + $(tail array)
print "sort: " + $(sort array)

""
"-COLLECTION----------------"
""

print "size(string): " + $(size string)
print "size(array): " + $(size array)
print "size(dictionary): " + $(size dictionary)

print "contains(string): " + $(contains string "h")
print "contains(array): " + $(contains array "four")
print "contains(dictionary): " + $(contains dictionary "name")

""
"-CORE----------------"
""

print "print: something"
log "log: something"

if (5>4) $(print "if: 5 is greater than 4")
if (5>4) {
	print "if(block): 5 is greater than 4"
}
if (5>6) $(print "nope") $("if-else: 5 is not greater than 6")
if (5>6) {
	print "nope"
} {
	print "if-else(block): 5 is not greater than 6"
}

count 0
loop (count<2) {
	print "loop: count=" + count
	count count+1
}

print "get(array): " + $(get array 0)
print "get(dictionary): " + $(get dictionary "name")

exec $(print "exec: done")
exec {
	print "exec(block): done"
}

import "test15.lib"

fun= {
	return "returned from function"
}

print "return: " + $(fun)

