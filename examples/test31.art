"--------------------------"
"Testing conditionals"
"--------------------------"

a true
b false

if a {
	print "condition succeeded! :)"
} {
	print "failed :("
}

if (a) {
	print "condition succeeded! :)"
} {
	print "failed :("
}

if (a==true) {
	print "condition succeeded! :)"
} {
	print "failed :("
}

if a==true {
	print "condition succeeded! :)"
} {
	print "failed :("
}

if $(and a b) {
	print "condition succeeded"
} {
	print "condition failed :)"
}

if ($(and a b)) {
	print "condition succeeded"
} {
	print "condition failed :)"
}

if $(and a==true b==true) {
	print "condition succeeded"
} {
	print "condition failed :)"
}

if $(and (a==true) (b==true)) {
	print "condition succeeded"
} {
	print "condition failed :)"
}

print 2+2 + " done :)"
if 3>2 { print "correct :)" }
if 2+1>2 { print "correct :)"}
if 4+1>5 { } { print "correct :)" }

print $(map $(range 1 10) { @*2 })
print $(filter $(range 1 10) { @%2==0 })

