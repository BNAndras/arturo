person #{
	name ""
	surname ""

	init: {
		this.name @0
		this.surname @1
	}

	sayHello: {
		print $(vars)
		print "Hello " + this.name
	}

	getName: {
		this.name
	}

	setName: [n] {
		this.name $(uppercase n)
		this.sayHello
		print "AFTER: " + this.name
	}
}

one $(new "person" #("john" "zafeiropoulos"))
one.sayHello
one.setName "alexander"
print $(vars)

two $(new "person" #("natalia" "baena"))
two.sayHello
two.setName "ifigenia"

print $(vars)

