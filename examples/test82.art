mainWindow $(window #{
	:title	"Number Adder - in Art:"
	:size	#(500 300)

	vbox #{
	 	label "Enter <b>two</b> numbers and add them up!" #{}

		hbox #{
			$(Num1 $(textfield "0" #{}))
			$(Num2 $(textfield "0" #{}))
		}

		$(result $(textfield "" #{}))

		button "calculate" #{
			:onClick	{
				print "button clicked!"

				one $(toNumber $(!Num1.get))
				two $(toNumber $(!Num2.get))

				!mainWindow._.0.result.set $(toString one+two)
			}
		}
	}


})

mainApp $(app "TestApp" mainWindow #{})
log $(syms)
!mainApp.run


