"=========================================="
"Art:uro | Running tests..."
"=========================================="

loop $(path.contents "../tests") {
	if $(contains @ ".art") {
		title 		$(replace @ ".art" "")
		srcPath		"tests/" + @
		resultPath 	"../tests/" + title + ".out"

		srcResult 	$(shell "./arturo " + srcPath)
		result 		$(file.read resultPath)

		print $(if srcResult=result { title + ": OK" } { title + ": error :(" })
	}
}