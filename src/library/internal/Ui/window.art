define :__webviewWindow [
    title: ""
    maximized?: false
    fullscreen?: false
    topmost?: false
    visible?: true

    changed: method [what][
        case what [
            'visible?       [
                \visible? ? -> \_show
                            -> \_hide
            ]
            'fullscreen?    [
                \fullscreen? ? -> \_fullscreen
                               -> \_unfullscreen
            ]
            'maximized?     [
                \maximized? ? -> \_maximize
                              -> \_unmaximize
            ]
            'topmost?       [
                \topmost?   ? -> \_topmost
                              -> \_untopmost
            ]
            'size           [
                \_setSize \size
            ]
            'title          [
                \_setTitle \title
            ]
        ]
    ]
]