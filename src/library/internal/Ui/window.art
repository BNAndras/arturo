define :__webviewWindow [
    title: ""
    maximizable?: true
    minimizable?: true
    topmost?: false
    visible?: true

    get: method [what][
        print ["intercepting:" what]
        case what [
            'size [
                \_getSize
            ]
            'minSize [
                \_getMinSize
            ]
            'maxSize [
                \_getMaxSize
            ]
            'position [
                \_getPosition
            ]
            'fullscreen? [
                \_isFullscreen
            ]
            'maximized? [
                \_isMaximized
            ]
            'minimized? [
                \_isMinimized
            ]
            any [
                get.field this 'what
            ]
        ]
    ]

    set: method [what, value][
        case what [
            'size           [
                \_setSize value
            ]
            'minSize        [
                \_setMinSize value
            ]
            'maxsize        [
                \_setMaxSize value
            ]
            'position       [
                \_setPosition value
            ]
            'title          [
                set.field this 'title value
                \_setTitle value
            ]
            'visible?       [
                set.field this 'visible? value
                value ? -> \_show
                        -> \_hide
            ]
            'fullscreen?    [
                value ? -> \_fullscreen
                        -> \_unfullscreen
            ]
            'maximized?     [
                value ? -> \_maximize
                        -> \_unmaximize
            ]
            'maximizable?   [
                set.field this 'maximizable? value
                \_setMaximizable value
            ]
            'minimized?     [
                value ? -> \_minimize
                        -> \_unminimize
            ]
            'minimizable?   [
                set.field this 'minimizable? value
                \_setMinimizable value
            ]
            'topmost?       [
                set.field this 'topmost? value
                value ? -> \_topmost
                        -> \_untopmost
            ]
            
        ]
    ]

    ; changed: method [what][
    ;     case what [
