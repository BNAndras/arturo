import {unitt}!
import ./{to.helper.art}!

for :integer [
    section :null [
        null >> 0
    ]

    section :logical [
        true  >> 1
        false >> 0
        maybe >> null
    ]

    section :integer [
        1 >> 1
        0 >> 0
        (neg 1) >> (neg 1)
    ]
]


for :floating [
    section :null [
        ; null >> 0.0
    ]

    section :logical [
        true  >> 1.0
        false >> 0.0
        maybe >> null
    ]

    section :integer [
        1 >> 1.0
        0 >> 0.0
        (neg 1) >> (neg 1.0)
    ]
]


for :logical [
    section :null [
        null >> false
    ]

    section :logical [
        true  >> true
        false >> false
        maybe >> maybe
    ]

    section :integer [
        0 >> false
        1 >> true
        (neg 1) >> true
        (random 1 1000) >> true
        (random neg 1000 neg 1) >> true
    ]
]


