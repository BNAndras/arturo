topic: function [title][
    print ""
    print repeat "*" 30
    print ["*" title]
    print repeat "*" 30
    print ""
    print repeat "-" 50
]

byteCode: function [blk][
    btc: to :bytecode blk
    inspect btc
    print ["input:" as.code blk]
    print ["data:" get btc 'data]
    print ["code:" get btc 'code]
    print repeat "-" 50
]

