section "Using pipes + iterators"

      check [
            print select map 1..10 'x -> x * 3 => even?
      ][
            1..10 | map 'x -> x * 3 
                  | select => even?
                  | print
      ]
      check [
            print "before"
            print select map 1..10 'x -> x * 3 => even?
            print "after"
      ][
            print "before"
            1..10 | 
                  map 'x 
                  -> x * 3 
                  | 
                  select 
                  => even?
                  | 
